# Database Configuration
POSTGRES_USER=docquery_user
POSTGRES_PASSWORD=changeme_postgres_password
POSTGRES_DB=docquery
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://docquery_user:changeme_postgres_password@postgres:5432/docquery

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# JWT Authentication
JWT_SECRET=changeme_jwt_secret_key_min_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Application Settings
APP_NAME=DocQuery
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# File Upload Settings
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# Rate Limiting
LOGIN_RATE_LIMIT=5  # Max login attempts per minute per IP
